@model IEnumerable<scm.Models.resOrderHdr>

@{
    ViewBag.Title = "Sales Order";
}

<h2>Sales Order</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="panel panel-default">
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dtOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dtDelivery)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resCustomer.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="itemName">
                    @Html.DisplayFor(modelItem => item.dtOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dtDelivery)
                </td>
                <td >
                    @Html.DisplayFor(modelItem => item.Remarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.resCustomer.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>

<p>
    @Html.ActionLink("Home", "Index", "Home") |
    @Html.ActionLink("Clients", "Index", "resCustomers") |
    Sales Order
</p>
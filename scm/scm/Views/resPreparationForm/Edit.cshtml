@model scm.Models.resPreparation

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>resPreparation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.dtPrepared, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dtPrepared, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dtPrepared, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.resRecipeId, "resRecipeId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("resRecipeId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.resRecipeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.resQty, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.resQty, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.resQty, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.itemQty, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.itemQty, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.itemQty, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.scItemId, "scItemId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownList("scItemId", null, htmlAttributes: new { @class = "form-control", @id = "item-dropdown"})
                @Html.ValidationMessageFor(model => model.scItemId, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-offset-4">
                <a href="#" class="btn btn-info" onclick="SelectItem()" style="align-content:flex-end">Item list</a>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.scStoreBinId, "scStoreBinId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("scStoreBinId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.scStoreBinId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>




<div class="modal fade" id="itemModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dissmiss="modal">&times;</a>
                <h4 id="ModalTitle"></h4>
            </div>
            <div class="modal-body">
                <form id="form">


                    <div class="panel panel-default">
                        <table class="table table-responsive">
                            <tr>
                                <th> Status </th>

                                <th> Action </th>
                            </tr>

                            @foreach (var items in ViewBag.scItemId)
                            {
                                <tr>
                                    <td> <h5>@items.Name</h5></td>
                                    <td>
                                       @* <button class="btn btn-info" onclick="getSelectedStatus()" style="width:100%;" id="@myscPrHdrs.Status" value="@myscPrHdrs.Status"> Select </button>*@

                                    </td>
                                </tr>
                            }
                        </table>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        function SelectItem() {
            $("#form")[0].reset();
            $("#ModalTitle").html("Select Item");
            $("#itemModal").modal();
        }

        function getSelectedItem() {
            $("button").click(function () {

                var supplierList = document.getElementById("item-dropdown");
                for (var i = 0; i < supplierList.options.length; i++) {
                    if (supplierList.options[i].text == this.id.toString()) {
                        //alert(i + 1);
                        document.getElementById("item-dropdown").value = i + 1; //set the index of dropdown by selected item
                    }
                }
                $('#itemModal').modal('hide');
            });
        }

    </script>
}


@model IEnumerable<scm.Models.resPreparation>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="panel panel-default">
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dtPrepared)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.itemQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resRecipe.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.scItem.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.scStoreBin.Code)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="itemName">
                    @Html.DisplayFor(modelItem => item.dtPrepared)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.resQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.itemQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.resRecipe.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.scItem.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.scStoreBin.Code)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>

@{Html.RenderPartial("PartialView_LowLevelItems", (List<scm.Models.EntItems>)ViewBag.LowLevelItems);}
<p>
    @Html.ActionLink("Home", "Index", "Home") |

@model scm.Models.scItem

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>new Item/Product</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.scUomId, "scUomId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownList("scUomId", null, htmlAttributes: new { @class = "form-control" , @id = "Unitid-dropdown" })
                @Html.ValidationMessageFor(model => model.scUomId, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-offset-4">
                <a href="#" class="btn btn-info" onclick="SelectUnit()" style="align-content:flex-end">Unit list</a>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Expirydays, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Expirydays, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Expirydays, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LowLevel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LowLevel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LowLevel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@* added by joy
    modal form
*@
<div class="modal fade" id="SupplierModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dissmiss="modal">&times;</a>
                <h4 id="ModalTitle"></h4>
            </div>
            <div class="modal-body">
                <form id="form">
                    <div class="panel panel-default">
                        <table class="table table-responsive">
                            <tr>
                                <th> Unit Name </th>

                                <th> Action </th>
                            </tr>
                            @foreach (var myUnits in ViewBag.scUoms)
                            {
                                <tr>
                                    <td> <h4>@myUnits.Unit </h4></td>
                                    <td>
                                        <button class="btn btn-info" onclick="getSelectedUnit()" style="width:100%;" id="@myUnits.Unit" value="@myUnits.Unit">  Select </button>

                                    </td>
                                </tr>

                            }
                        </table>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

    <script>
        //show the modal form
        function SelectUnit() {
            $("#form")[0].reset();
            $("#ModalTitle").html("Select the Unit of Measure");
            $("#SupplierModal").modal();
        }

        //get and set the selected item to the dropdown list
        function getSelectedUnit() {
            $("button").click(function () {

                var supplierList = document.getElementById("Unitid-dropdown");
                for (var i = 0; i < supplierList.options.length; i++) {
                    if (supplierList.options[i].text == this.id.toString()) {
                        //alert(i + 1);
                        document.getElementById("Unitid-dropdown").value = i + 1; //set the index of dropdown by selected item
                    }
                }
                //alert(document.getElementById("supplierid-textbox").options[1].text);
                $('#SupplierModal').modal('hide');
            });
        }

    </script>
}

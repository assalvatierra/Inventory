@model IEnumerable<scm.Models.EntItems>

@{
    ViewBag.Title = "ItemInventory";
}

<h2>Item Inventory</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="panel panel-default">
    <table class="table table-listing">
        <tr>
            <th>
                Item/Product
            </th>
            <th>
                Stock
            </th>
            <th>
                Low Level
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="itemName">
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td>
                    @(item.ItemIn - item.ItemOut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LowLevel)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Storage Bins", "StoreBin", "scStoreBins", new { id = item.Id }, null) |
                    @Html.ActionLink("Retail", "RetailItem", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
    <p>
        @Html.ActionLink("Home", "Index", "Home") |
        Items |
        @Html.ActionLink("Categories", "Index", "scCategories") |
        @Html.ActionLink("Storage list", "Index", "scStorages") |
        @Html.ActionLink("Unit of Measure", "Index", "scUoms")
    </p>

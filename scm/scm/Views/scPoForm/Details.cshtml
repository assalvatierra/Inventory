    </dl>
</div>

<table class="table">
    <tr>
        <th>
            Item
        </th>
        <th>
            Qty
        </th>
        <th>
            Unit
        </th>
        <th>
            Unit Price
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.details)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.scItem.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.scUom.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditItem", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    <tr>
        <td colspan="5">
            @Html.ActionLink("Add Item", "AddItem")
        </td>
    </tr>
</table>

<p>

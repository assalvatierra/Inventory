@model scm.Controllers.poForm
@{
    ViewBag.Title = "poForm";
}

<h2>poForm</h2>

<div>
    <h4>scPoHdr</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.master.dtPo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.master.dtPo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.master.Remarks)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.master.Remarks)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.master.scSupplier.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.master.scSupplier.Name)
        </dd>
        <dt>
            &nbsp;
        </dt>

        <dd>
            @Html.ActionLink("Edit", "Edit", new { id = Model.master.Id })        

@model IEnumerable<scm.Models.EntItems>

<div class="pv_bg">
    <span class="itemRemarks">Low Level Items</span>
    <table class="pv_tbl">
        <tr class="pv_tblRow">
            <th>
                Product/Item
            </th>
            <th>
                Current
            </th>
            <th>
                Low Level
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td>
                    @(item.ItemIn - item.ItemOut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LowLevel)
                </td>
            </tr>
        }

    </table>

    <br />
</div>

<br />
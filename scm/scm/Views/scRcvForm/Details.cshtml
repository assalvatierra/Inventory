@model IEnumerable<scm.Models.scRcvDtl>

@{
    ViewBag.Title = "Index";
}

<h2>Receiving</h2>
Details
<div class="panel panel-default">
    <table class="table table-details">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.scRcvHdr.Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.scItem.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.scStoreBin.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.scPoDtl.Id)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Qty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.scRcvHdr.Remarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.scItem.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.scStoreBin.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.scPoDtl.Id)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditItem", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteItem", new { id = item.Id })
                </td>
            </tr>
        }

        <tr>
            <td colspan="6">
                @Html.ActionLink("Add New", "CreateItem")
            </td>
        </tr>
    </table>
</div>

@{Html.RenderPartial("PartialView_ItemStatus", (List<scm.Models.EntOrderStatus>)ViewBag.requestedItems); }



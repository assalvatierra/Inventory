@model IEnumerable<scm.Models.scItem>

@{
    ViewBag.Title = "SupplierByItem";
    string sSupplier = "";
}

<h2>SupplierByItem</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Expirydays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.scUom.Unit)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    sSupplier = "";
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @foreach (var supp in item.scItemSuppliers)
            {
                if (sSupplier.Trim() != "")
                {
                    sSupplier = supp.scSupplier.Name;
                    <span>&#44;</span>
                }

                <span>
                    @Html.ActionLink(supp.scSupplier.Name,"Edit",new { Id = supp.scSupplierId})
                </span>
            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.scUom.Unit)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

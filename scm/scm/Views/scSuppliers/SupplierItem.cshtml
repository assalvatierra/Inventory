@model IEnumerable<scm.Models.scItemSupplier>

@{
    ViewBag.Title = "Supplier Items";
}

<h2>Supplier Items</h2>

<p>
    @Html.ActionLink("Add New Item", "AddSupplierItem", new { SupplierId = ViewBag.SupplierId } ,null)
</p>
<table class="table">
    <tr>
        <th>
            <span class="tblHeader">
                Item
            </span>
        </th>
        <th>
            Price
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Leadtime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.scItem.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
            /
            @Html.DisplayFor(modelItem => item.scUom.Unit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Leadtime)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditSupplierItem", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteSupplierItem", new { id=item.Id })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Back to Suppliers", "Index")
</p>